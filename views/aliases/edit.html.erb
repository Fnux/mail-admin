<form action="/mail/aliases/edit/<%= @forward.id %>" method="post">
   <div class="row">
      <div class="five columns">
         <input type="text" name="source" class="u-full-width" placeholder="Source" value="<%= @forward.source %>" />
      </div>
      <div class="five columns">
           <input type="text" name="destination" class="u-full-width" placeholder="Destination" value="<%= @forward.destination %>" />
      </div>
      <div class="two columns">
         <button type="submit" class="u-full-width">Save &raquo;</button>
      </div>
   </div>
</form>
