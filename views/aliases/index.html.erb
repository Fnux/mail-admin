<table class="u-full-width" %>
   <thead>
      <tr>
         <th style="width:5%;">#</th>
         <th style="width:37.5%;">Source</th>
         <th style="width:37.5%;">Destination</th>
         <th style="width:20%;">Actions</th>
      </tr>
   </thead>
   <tbody>
      <% @aliases.each do |forward| %>
      <tr>
         <td><%= forward.id %></td>
         <td><%= forward.source %></td>
         <td><%= forward.destination %></td>
         <td>
            <a href="/mail/aliases/edit/<%= forward.id %>">Edit</a> /
            <a href="/mail/aliases/delete/<%= forward.id %>">Delete</a>
         </td>
      </tr>
      <% end %>
   </tbody>
</table>

<a href="/mail/aliases/new" class="button u-full-width">Add a new alias &raquo;</a>
