<h2 style="margin-top:0">Manage Users - <a href="/panel/admin/">Back to admin index &crarr;</a></h2>

<table class="full">
  <thead>
    <tr>
      <th style="width:5%;">#</th>
      <th style="width:75%;">Email Address</th>
      <th style="width:20%;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.mail %></td>
        <td>
          <a href="/panel/admin/users/edit/<%= user.id %>">Edit</a> /
          <a href="/panel/admin/users/destroy/<%= user.id %>">Delete</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<form action="/panel/admin/users/create" method="post">
  <input type="text" name="mail" class="" placeholder="Email Adress" />
  <input type="password" name="password" class="" placeholder="Password" />
  <button type="submit" class="">Create User &raquo;</button>
</form>
